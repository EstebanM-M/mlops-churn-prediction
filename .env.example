# =============================================================================
# MLOps Churn Prediction - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to Git (it's in .gitignore)

# ===== MLflow Configuration =====
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=churn-prediction
MLFLOW_ARTIFACT_LOCATION=./mlruns

# ===== Database Configuration =====
DATABASE_URL=postgresql://user:password@localhost:5432/churn_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=churn_db
DB_USER=postgres
DB_PASSWORD=your_secure_password

# ===== API Configuration =====
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=4

# ===== Model Configuration =====
MODEL_REGISTRY_PATH=./models
CHAMPION_MODEL_NAME=xgboost_champion
CHAMPION_MODEL_VERSION=1

# ===== Monitoring Configuration =====
ENABLE_DRIFT_DETECTION=true
DRIFT_CHECK_INTERVAL=3600
ALERT_THRESHOLD_ACCURACY=0.80

# ===== Feature Store Configuration =====
FEATURE_STORE_PATH=./data/features
FEATURE_CACHE_TTL=86400

# ===== Logging Configuration =====
LOG_LEVEL=INFO
LOG_FORMAT=json

# ===== DVC Configuration (optional) =====
# DVC_REMOTE_URL=s3://your-bucket/dvc-cache
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret

# ===== Development/Production =====
ENVIRONMENT=development
DEBUG=true